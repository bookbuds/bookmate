{
    "restartable": "rs",
    "open": "false",
	"colours": true,
	"ignore": [
	  ".git",
	  "node_modules/**/node_modules",
	  "private",
	  "public"
	],
	"verbose": true,
	"execMap": {
	  "js": "node --harmony"
	},
	"events": {
	  "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
	},
	"watch": [
	  "controllers",
	  "models"
	],
	"ext": "js json"
  }