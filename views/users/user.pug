extends ../layouts/layout

block headerscripts

block content
    #main
        .sidebar__profile
            .sidebar__profile-wrapper
                .sidebar__profile-avatar
                    img(src=profileImage alt="profile image")
                .sidebar__profile-info
                    h3.profile__name= username
                    p.profile__info Female
                    p.profile__location Atlanta, GA
                    button.profile__message Message
        .main__books
            include ../layouts/includes/nav
            .main__bookshelf
                h1.bookshelf__title Reading
                .bookshelf__reading
                    for item in results
                        if item['Books.UserBook.status'] == 'reading'
                            - var imgurl = item['Books.img_url']
                            - var title = item['Books.title']
                            - var author = item['Books.author']
                            - var bookid = item['Books.UserBook.BookId']
                                .main__books-wrapper(data-id=bookid, data-title=title, data-author=author, data-imgurl=imgurl)
                                    img.books__image(src=imgurl alt="image")
                                    p.books__title= title
                                    p.books__author by #{author}
                h1.bookshelf__title Read    
                .bookshelf__read
                    for item in results
                        if item['Books.UserBook.status'] == 'read'
                            - var imgurl = item['Books.img_url']
                            - var title = item['Books.title']
                            - var author = item['Books.author']
                            - var bookid = item['Books.UserBook.BookId']
                                .main__books-wrapper(data-id=bookid, data-title=title, data-author=author, data-imgurl=imgurl)
                                    img.books__image(src=imgurl alt="image")
                                    p.books__title= title
                                    p.books__author= author
                h1.bookshelf__title Want to Read
                .bookshelf__want-to-read
                    for item in results
                        if item['Books.UserBook.status'] == 'wantToRead'
                            - var imgurl = item['Books.img_url']
                            - var title = item['Books.title']
                            - var author = item['Books.author']
                            - var bookid = item['Books.UserBook.BookId']
                                .main__books-wrapper(data-id=bookid, data-title=title, data-author=author, data-imgurl=imgurl)
                                    img.books__image(src=imgurl alt="image")
                                    p.books__title= title
                                    p.books__author= author
        .sidebar__users
            button.sidebar__button-close X
            .sidebar__book-wrapper

            .sidebar__user-wrapper


block footerscripts
